<h1>My Friends</h1>

<div class="search-area">
  <h3>Search Friends</h3>
  <%= form_with url: search_friend_path, method: :get, local: false do |f| %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= f.text_field :friend, placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3">
        <%= f.button fa_icon("search 2x"), class: "btn btn-success"%>
      </div>
    </div>
  <% end %>
</div>
<div id="results-friend">

</div>

<% unless @friends.empty? %>
  <%= render "friends/list" %>
<% end %>